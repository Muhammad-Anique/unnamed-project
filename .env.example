# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3000
APP_NAME=unnamed-project
APP_VERSION=1.0.0

# =============================================================================
# DATABASE CONFIGURATION (Example for common databases)
# =============================================================================

# PostgreSQL (Supabase/Regular PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=your_database_name

# Supabase (if using)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_key

# MongoDB (if using)
MONGODB_URI=mongodb://localhost:27017/your_database_name

# Redis (if using for caching/sessions)
REDIS_URL=redis://localhost:6379

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_too
SESSION_SECRET=your_session_secret_key

# OAuth Providers (if using)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Email Service (Example: SendGrid, Mailgun, etc.)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your_email_service_api_key
FROM_EMAIL=noreply@yourapp.com

# File Storage (Example: AWS S3, Cloudinary)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Payment Processing (if needed)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# FRONTEND CONFIGURATION (if using)
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# EXTERNAL APIs & INTEGRATIONS
# =============================================================================

# Example external APIs
OPENAI_API_KEY=your_openai_api_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Social Media APIs (if needed)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret

# =============================================================================
# MONITORING & ANALYTICS (if using)
# =============================================================================
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
SENTRY_DSN=your_sentry_dsn

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# For debugging and development
DEBUG=true
LOG_LEVEL=info

# =============================================================================
# DEPLOYMENT SPECIFIC (will be updated based on final architecture)
# =============================================================================

# Docker (if using)
DOCKER_ENV=development

# Vercel (if deploying to Vercel)
VERCEL_URL=your-vercel-deployment-url

# Heroku (if deploying to Heroku)
HEROKU_APP_NAME=your-heroku-app-name

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit .env file to version control
# 2. Update this template based on final tech stack selection
# 3. Use strong, unique passwords and keys for production
# 4. Keep production environment variables secure
# 5. This template will be refined once PRD is provided and tech stack is selected